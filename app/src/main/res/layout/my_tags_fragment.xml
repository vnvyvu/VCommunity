<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.home.MyTags">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include android:id="@+id/myPosts"
                    layout="@layout/my_tag_items"
                    />

                <include android:id="@+id/myTag1"
                    layout="@layout/my_tag_items"
                    android:visibility="gone"
                    />

                <include android:id="@+id/myTag2"
                    layout="@layout/my_tag_items"
                    android:visibility="gone"
                    />

                <include android:id="@+id/myTag3"
                    layout="@layout/my_tag_items"
                    android:visibility="gone"
                    />

                <include android:id="@+id/myTag4"
                    layout="@layout/my_tag_items"
                    android:visibility="gone"
                    />

                <include android:id="@+id/myTag5"
                    layout="@layout/my_tag_items"
                    android:visibility="gone"
                    />

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</layout>