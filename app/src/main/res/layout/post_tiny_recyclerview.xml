<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="post"
            type="com.vyvu.vcommunity.model.Post" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        android:theme="@style/Theme.MaterialComponents"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >

            <ImageView
                android:id="@+id/outImage"
                android:layout_width="150dp"
                android:layout_height="100dp"
                imgURL="@{post.image}"
                android:src="@drawable/ic_baseline_image_24"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:id="@+id/outName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textIsSelectable="true"

                android:textSize="13sp"
                android:gravity="center_vertical"
                android:text="@{post.name}"
                tools:ignore="UseCompatTextViewDrawableXml"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"

                app:layout_constraintRight_toLeftOf="@id/outScore"
                app:layout_constraintTop_toBottomOf="@id/outImage"
                app:layout_constraintLeft_toLeftOf="@id/outImage"
                />

            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/outName"
                app:layout_constraintRight_toRightOf="@id/outImage"
                app:layout_constraintLeft_toLeftOf="@id/outImage"
                />

            <TextView
                android:id="@+id/outScore"
                android:layout_width="wrap_content"
                android:layout_height="0dp"

                android:minHeight="0dp"
                android:minWidth="0dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml"

                android:textColor="#5E5E5E"
                android:textSize="12sp"
                android:text="@{``+post.score}"
                android:drawableLeft="@drawable/ic_baseline_star_half_16"
                app:layout_constraintTop_toTopOf="@+id/outName"
                app:layout_constraintRight_toRightOf="@+id/outImage"
                app:layout_constraintBottom_toBottomOf="@+id/outName"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>