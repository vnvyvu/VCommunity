<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="post"
            type="com.vyvu.vcommunity.model.Post" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        android:theme="@style/Theme.MaterialComponents"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/outCreatedDate"
                android:layout_width="wrap_content"
                android:layout_height="0dp"

                android:minHeight="0dp"
                android:minWidth="0dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml"

                android:textColor="#5E5E5E"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_baseline_calendar_today_16"
                android:text="@{@string/nonsecondformat(post.createdDate.time)}"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/btnExpand"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExpand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:minWidth="40dp"
                android:padding="0dp"
                app:iconPadding="0dp"
                android:textSize="24sp"
                app:iconGravity="textStart"
                android:gravity="center"

                app:icon="@drawable/ic_baseline_keyboard_arrow_down_18"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <ImageView
                android:id="@+id/outImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                imgURL="@{post.image}"
                android:src="@drawable/ic_baseline_image_24"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toBottomOf="@+id/btnExpand"
                />
            <TextView
                android:id="@+id/outName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textIsSelectable="true"

                app:layout_constraintWidth_percent="0.65"
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:text="@{post.name}"
                tools:ignore="UseCompatTextViewDrawableXml"
                android:layout_marginTop="10dp"

                app:layout_constraintTop_toBottomOf="@id/outImage"
                app:layout_constraintLeft_toLeftOf="@id/outImage"
                />
            <TextView
                android:id="@+id/outView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml"

                android:textColor="#5E5E5E"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_baseline_remove_red_eye_16"
                android:text="@{``+post.view}"

                app:layout_constraintRight_toRightOf="@id/outImage"
                app:layout_constraintTop_toTopOf="@id/outName"
                app:layout_constraintBottom_toBottomOf="@id/outName"
                />

            <TextView
                android:id="@+id/outShortInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:ellipsize="marquee"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textIsSelectable="true"
                app:layout_constraintWidth_percent="0.9"
                android:textColor="#5E5E5E"
                android:textSize="16sp"
                android:text="@{post.shortInfo}"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/outName"
                app:layout_constraintLeft_toLeftOf="@id/outImage"
                />

            <TextView
                android:id="@+id/outDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:visibility="gone"

                android:textColor="#5E5E5E"
                android:textSize="12sp"
                android:text="@{post.detail}"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/outShortInfo"
                app:layout_constraintLeft_toLeftOf="@id/outImage"
                app:layout_constraintRight_toRightOf="@id/outImage"
                />

            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/outDetail"
                app:layout_constraintRight_toRightOf="@id/outImage"
                app:layout_constraintLeft_toLeftOf="@id/outImage"
                />

            <TextView
                android:id="@+id/outScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:minHeight="0dp"
                android:minWidth="0dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml"

                android:textColor="#5E5E5E"
                android:textSize="12sp"
                android:text="@{``+post.score}"
                android:drawableLeft="@drawable/ic_baseline_star_half_16"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/divider1"
                app:layout_constraintLeft_toLeftOf="@id/outImage"
                />

            <TextView
                android:id="@+id/outTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml"

                android:textColor="#5E5E5E"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_baseline_layers_16"
                android:text="@{post.tag}"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/divider1"
                app:layout_constraintRight_toRightOf="@id/outImage"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>